<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_layout" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="93dp"
        android:layout_height="95dp"
        android:layout_marginTop="112dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.544"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activeDonor"
        android:layout_width="280dp"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        android:text="Active Donor"
        android:textAlignment="center"
        android:textColor="@color/redLight"
        android:textColorHint="@color/halfWhite"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.603"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/userFullName"
        android:layout_width="220dp"
        android:layout_height="38dp"
        android:text="Full Name"
        android:textColor="@color/redLight"
        android:textColorHint="@color/halfWhite"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.243"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activeDonor"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/userAge"
        android:layout_width="182dp"
        android:layout_height="43dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="181dp"
        android:text="Age"
        android:textColor="@color/redLight"
        android:textColorHint="@color/halfWhite"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userFullName" />

    <TextView
        android:id="@+id/bloodGroup"
        android:layout_width="163dp"
        android:layout_height="44dp"
        android:text="Blood Group"
        android:textColor="@color/redLight"
        android:textColorHint="@color/halfWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.193"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userAge"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/userCity"
        android:layout_width="173dp"
        android:layout_height="45dp"
        android:text="City"
        android:textColor="@color/redLight"
        android:textColorHint="@color/halfWhite"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.201"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bloodGroup"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/userProvince"
        android:layout_width="153dp"
        android:layout_height="47dp"
        android:text="Province"
        android:textColor="@color/redLight"
        android:textColorHint="@color/halfWhite"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.186"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userCity"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/userCountry"
        android:layout_width="199dp"
        android:layout_height="49dp"
        android:layout_marginBottom="212dp"
        android:text="Country"
        android:textColor="@color/redLight"
        android:textColorHint="@color/halfWhite"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.226"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userProvince"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="353dp"
        android:layout_height="48dp"
        android:text="Convey your request through an email, text message or a call !"
        android:textAlignment="center"
        android:textColor="@color/redLight"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userCountry"
        app:layout_constraintVertical_bias="0.144" />

    <ImageView
        android:id="@+id/emailIcon"
        android:layout_width="44dp"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_email"
        app:layout_constraintEnd_toStartOf="@+id/messageIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageView
        android:id="@+id/messageIcon"
        android:layout_width="44dp"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_text"
        app:layout_constraintEnd_toStartOf="@+id/callIcon"
        app:layout_constraintStart_toEndOf="@+id/emailIcon"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageView
        android:id="@+id/callIcon"
        android:layout_width="44dp"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_call"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/messageIcon"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>